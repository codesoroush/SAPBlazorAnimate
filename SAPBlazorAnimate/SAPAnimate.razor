@ChildContent

@code
{
    /// <summary>
    /// put this varible at class element which must be animate
    /// </summary>
    public string Animator { get; set; } = "";

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    /// <summary>
    /// start animate element (animate duration is 1 sec at default)
    /// </summary>
    /// <param name="animatebookType"></param>
    public async void Animate(string animatebookType)
    {
        Animator = animatebookType;
        await Task.Delay(1000);
        Animator = "";
        StateHasChanged();
    }
    /// <summary>
    /// set delay for removing on animation
    /// </summary>
    /// <param name="animatebookType"></param>
    /// <param name="delay"></param>
        public async void Animate(string animatebookType, TimeSpan delay )
    {
        Animator = animatebookType;
        await Task.Delay(delay);
        Animator = "";
        StateHasChanged();
    }

}